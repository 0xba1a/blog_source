highlight-background = #ddd2b126
highlight-current-line = #393939
highlight-selection = #515151
highlight-foreground = rebeccapurple
highlight-comment = #555
highlight-red = darkred
highlight-orange = darkorange
highlight-yellow = darkyellow
highlight-green = darkgreen
highlight-aqua = darkaqua
highlight-blue = darkblue
highlight-purple = darkpurple

$code-block
  background: highlight-background
  margin: 0 -1
  padding: 15px article-padding
  border-style: dashed
  border-color: color-border
  border-width: 1px
  overflow: auto
  color: highlight-foreground
  font-family: "Roboto Mono", Monospace
  line-height: font-size * line-height

$line-numbers
  color: #666
  font-size: 0.85em

.content
  //pre, code
    //font-family: font-mono
  code
    background: #f5f5f5
    text-shadow: 0 1px #fff
    padding: 0.3em
  pre
    @extend $code-block
    code
      background: none
      text-shadow: none
      padding: 0
  .highlight
    @extend $code-block
    pre
      border: none
      margin: 0
      padding: 0
    table
      margin: 0
      width: auto
    td
      border: none
      padding: 0
    tr
      &:hover
        background-color: #ffffffff
    figcaption
      clearfix()
      font-size: 0.85em
      color: highlight-comment
      line-height: 1em
      margin-bottom: 1em
      a
        float: right
    .gutter pre
      @extend $line-numbers
      text-align: right
      padding-right: 20px
    .line
      height: font-size * line-height
      padding: 0 0.3em

  pre
    .title
      font-size: inherit;
      font-weight: inherit;
      line-height: inherit;
    .number
      font-size: inherit;
      font-weight: inherit;
      line-height: inherit;
      align-items: inherit;
      background-color: inherit;
      border-radius: inherit;
      height: inherit;
      display: inherit;
      padding: inherit;
      margin-right: inherit;
      justify-content: inherit;
      min-width: inherit;
      text-align: inherit;
      vertical-align: inherit;

  pre
    .comment
    .title
    .template_comment
    .header
    .javadoc
      color: highlight-comment
    .variable
    .attribute
    .tag
    .regexp
    .ruby .constant
    .xml .tag .title
    .xml .pi
    .xml .doctype
    .html .doctype
    .css .id
    .css .class
    .css .pseudo
    .winutils
    .method
    .request
    .status
    .nginx .title
    .diff .change
    .special
    .attr_selector
    .important
    .subst
    .clojure .title
    .deletion
      color: highlight-red
    .number
    .preprocessor
    .preprocessor .keyword
    .built_in
    .literal
    .params
    .constant
    .command
    .lisp .body
    .parent
    .haskell .type
      color: highlight-orange
    .class
    .ruby .class .title
    .css .rules .attribute
    .addition
      color: highlight-green
    .string
    .value
    .inheritance
    .ruby .symbol
    .symbol .string
    .xml .cdata
    .function .title
      color: highlight-green
    .css .hexcolor
    .phpdoc
    .tex .formula
      color: highlight-aqua
    .function
    .python .decorator
    .python .title
    .ruby .function .title
    .ruby .title .keyword
    .perl .sub
    .javascript .title
    .coffeescript .title
    .localvars
    .chunk
    .decorator
    .identifier
    .vhdl
      color: highlight-blue
    .keyword
    .javascript .function
      color: highlight-purple
