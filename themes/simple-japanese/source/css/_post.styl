.post
  padding: 2rem;
  margin-bottom: 2rem;

.title
  margin-bottom: 0 !important;

.post-thumbnail
  text-align: center;
  margin-bottom: 1.5rem;
  margin: 0 auto 1.5rem;
  height: 400px !important;
  overflow: hidden !important;
  .thumbnail
    width: 100% !important;
    height: auto !important;

.content
  &:not(:last-child)
    margin-bottom: 4rem;

  h2
    font-weight: bold;

  p
    line-height: 200%;
    font-size: 1.1em;

  strong
    background: linear-gradient(rgba(0, 0, 0, 0) 61%, #e9f1f8 60%, #e9f1f8 0%);

  img
    max-width: 100%;

  code
    color: #399704 !important;
    background: none !important;
    border-radius: .25rem;
    font-family: "Roboto Mono",Monospace

  a[rel=external]::after
    content: "\f08e";
    font-family: "FontAwesome";
    margin-left: 0.25em;
    margin-right: 0.25em;
    font-size: 0.75rem;
    text-decoration: none !important;
