@import "nib"
@import "_variables"

body
  font-family: "Merriweather", serif
  scroll-behavior: smooth;
  text-rendering: optimizeLegibility;
  font-feature-settings: "pwid";
  font-size: 1rem;
  line-height: 1.5;
  color: #222;

a
  transition: all 0.5s;

h1
  font-family: -apple-system,BlinkMacSystemFont,"Roboto",sans-serif;
h2
  font-family: -apple-system,BlinkMacSystemFont,"Roboto",sans-serif;
h3
  font-family: -apple-system,BlinkMacSystemFont,"Roboto",sans-serif;


.columns
  margin: 0;


